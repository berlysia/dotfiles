{
  "name": "@berlysia-dotfiles/hook-scripts",
  "version": "1.0.0",
  "description": "TypeScript-based hook scripts for Claude Code",
  "type": "module",
  "scripts": {
    "test": ".scripts/test-with-types.sh",
    "test:types": "npx tsgo --noEmit --target esnext --module esnext **/*.ts",
    "test:functional": "./scripts/tests/integration/run-ts-hook-tests.sh",
    "lint": "npx tsgo --noEmit --strict **/*.ts",
    "check": "npm run lint && npm run test"
  },
  "keywords": [
    "claude-code",
    "hooks",
    "typescript",
    "automation"
  ],
  "devDependencies": {
    "@types/node": "^24.2.1"
  },
  "dependencies": {
    "ccusage": "^15.9.3"
  }
}