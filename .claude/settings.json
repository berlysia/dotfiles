{
  "permissions": {
    "allow": [
      "Bash(bun test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm lint:fix:*)",
      "Bash(pnpm quality-check:*)",
      "Bash(pnpm test:ci:*)",
      "Bash(pnpm type-check:*)",
      "Bash(chezmoi data:*)",
      "Bash(chezmoi diff:*)",
      "Bash(chezmoi status)",
      "Bash(chezmoi managed:*)",
      "Bash(chezmoi help:*)",
      "Bash(chezmoi --version)",
      "Bash(mise ls:*)",
      "Bash(mise list:*)",
      "Bash(mise ls-remote:*)",
      "Bash(mise registry:*)",
      "Bash(mise reshim:*)",
      "Bash(node --test:*)",
      "Edit(**/*.test.*)",
      "Read(**/*.test.*)",
      "Read(dot_claude/hooks/**)",
      "Read(~/.local/share/chezmoi/**)",
      "Edit(~/.claude/plans/**)",
      "Write(~/.claude/plans/**)"
    ],
    "deny": [
      "Edit(~/.claude/settings*.json)",
      "Edit(~/.claude/CLAUDE.md)",
      "Edit(~/.claude/.credentials.json)",
      "Edit(~/.claude/commands/**)",
      "Edit(~/.claude/agents/**)",
      "Edit(~/.claude/hooks/**)",
      "Edit(~/.claude/skills/**)",
      "Edit(~/.claude/plugins/**)",
      "Edit(~/.claude/scripts/**)",
      "Edit(~/.claude/lib/**)",
      "Write(~/.claude/settings*.json)",
      "Write(~/.claude/CLAUDE.md)",
      "Write(~/.claude/.credentials.json)",
      "Write(~/.claude/commands/**)",
      "Write(~/.claude/agents/**)",
      "Write(~/.claude/hooks/**)",
      "Write(~/.claude/skills/**)",
      "Write(~/.claude/plugins/**)",
      "Write(~/.claude/scripts/**)",
      "Write(~/.claude/lib/**)",
      "MultiEdit(~/.claude/**)"
    ]
  },
  "outputStyle": "Explanatory",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -n \"${CLAUDE_CODE_REMOTE:-}\" ]]; then mkdir -p ~/.claude/skills ~/.claude/rules && cp -rf \"$CLAUDE_PROJECT_DIR\"/dot_claude/skills/* ~/.claude/skills/ && cp -rf \"$CLAUDE_PROJECT_DIR\"/dot_claude/rules/* ~/.claude/rules/ && echo '[session-start] Skills installed to ~/.claude/' >&2; fi"
          }
        ]
      }
    ]
  }
}
