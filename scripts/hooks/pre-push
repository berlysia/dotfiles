#!/bin/bash
# Git pre-push hook
# - Secret detection with gitleaks (full repository scan)

set -euo pipefail

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

if [ "${SKIP_HOOKS:-}" = "1" ]; then
    echo -e "${YELLOW}‚ö† Hooks skipped (SKIP_HOOKS=1)${NC}"
    exit 0
fi

REPO_ROOT=$(git rev-parse --show-toplevel)
EXIT_CODE=0

#
# 1. GitHub Actions Security Check (zizmor)
#
if [ -d "${REPO_ROOT}/.github/workflows" ]; then
    WORKFLOW_COUNT=$(find "${REPO_ROOT}/.github/workflows" -type f \( -name "*.yml" -o -name "*.yaml" \) | wc -l)

    if [ "$WORKFLOW_COUNT" -gt 0 ]; then
        echo -e "${BLUE}‚ö° Checking GitHub Actions workflows with zizmor...${NC}"
        if command -v zizmor &> /dev/null; then
            if zizmor "${REPO_ROOT}/.github/workflows"; then
                echo -e "${GREEN}‚úì All workflows passed zizmor security checks${NC}"
            else
                echo -e "${RED}‚ùå zizmor found security issues in workflows${NC}"
                EXIT_CODE=1
            fi
        else
            echo -e "${YELLOW}‚ö† zizmor not installed, skipping workflow security check${NC}"
            echo -e "${YELLOW}  Install: mise install cargo-zizmor${NC}"
        fi
    fi
fi

echo

#
# 2. Secret Detection (gitleaks)
#
echo -e "${BLUE}üîç Scanning repository for secrets before push...${NC}"
if command -v gitleaks &> /dev/null; then
    if ! gitleaks detect --config "${REPO_ROOT}/.gitleaks.toml" --verbose; then
        echo -e "${RED}‚ùå Secrets detected in repository history!${NC}"
        echo -e "${YELLOW}   Use 'git rebase -i' to fix commits with secrets.${NC}"
        EXIT_CODE=1
    else
        echo -e "${GREEN}‚úì No secrets found${NC}"
    fi
else
    echo -e "${YELLOW}‚ö† gitleaks not installed, skipping secret detection${NC}"
fi

exit $EXIT_CODE
