{
  "sync": {
    "auto_import": true,
    "watch": [
      "\\.zshrc",
      "\\.bashrc", 
      "\\.bash_profile",
      "\\.gitconfig",
      "\\.zsh/.*",
      "\\.local/bin/.*",
      "\\.claude/settings.json",
      "\\.claude/CLAUDE.md"
    ],
    "ignore": [
      "\\.cache/.*",
      "\\.tmp/.*",
      "\\.log$",
      "\\.DS_Store",
      "\\.git/.*"
    ]
  },
  "backup": {
    "retention_days": 30,
    "max_backups": 50
  },
  "logging": {
    "level": "info",
    "max_size_mb": 10
  },
  "notification": {
    "on_import": true,
    "on_error": true,
    "notify_command": "notify-send"
  }
}