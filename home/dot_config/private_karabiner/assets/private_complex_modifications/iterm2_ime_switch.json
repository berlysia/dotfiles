{
  "title": "iTerm2でCtrl+Shift+J/;によるIME切り替えを有効にする",
  "rules": [
    {
      "description": "iTerm2: Ctrl+Shift+J → かな入力に切り替え",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control", "shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "iTerm2: Ctrl+Shift+; → 英数入力に切り替え",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control", "shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "iTerm2: Ctrl+Shift+' → 英数入力に切り替え",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control", "shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
