#!/usr/bin/env bash
# Validate JSON configuration files generated from chezmoi templates
# This script validates all JSON files in ~/.claude/ directory

set -euo pipefail

echo "üîç Validating JSON configuration files..."

# Track validation results
ERRORS=0
VALIDATED=0

# Function to validate JSON file
validate_json() {
    local file="$1"
    local name="$(basename "$file")"
    
    if [ ! -f "$file" ]; then
        echo "‚ö†Ô∏è  $name: File not found"
        return 1
    fi
    
    # Try to parse with jq
    if jq empty "$file" 2>/dev/null; then
        echo "‚úÖ $name: Valid JSON"
        ((VALIDATED++))
        return 0
    else
        echo "‚ùå $name: Invalid JSON"
        ((ERRORS++))
        
        # Show detailed error
        echo "   Error details:"
        jq empty "$file" 2>&1 | sed 's/^/   /'
        
        # Try to identify common issues
        if grep -q ',\s*[}\]]' "$file"; then
            echo "   ‚ö†Ô∏è  Possible trailing comma detected"
            grep -n ',\s*[}\]]' "$file" | head -5 | sed 's/^/   Line /'
        fi
        
        return 1
    fi
}

# Find and validate all JSON files in .claude directory
echo -e "\nüìÑ Checking JSON files in ~/.claude/..."
while IFS= read -r json_file; do
    validate_json "$json_file"
done < <(find "$HOME/.claude" -name "*.json" -type f 2>/dev/null || true)

# Also check ~/.claude.json if it exists
if [ -f "$HOME/.claude.json" ]; then
    echo -e "\nüìã Checking ~/.claude.json..."
    validate_json "$HOME/.claude.json"
fi

# Summary
echo -e "\nüìä Validation Summary:"
echo "   Total validated: $VALIDATED"
echo "   Errors found: $ERRORS"

if [ $ERRORS -eq 0 ]; then
    echo -e "\n‚ú® All JSON files are valid!"
    exit 0
else
    echo -e "\n‚ö†Ô∏è  Found $ERRORS invalid JSON file(s)"
    echo "   Run 'chezmoi diff' to check template changes"
    echo "   Run 'chezmoi apply' to regenerate files from templates"
    exit 1
fi