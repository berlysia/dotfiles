{{ if ne .chezmoi.os "windows" -}}
#!/bin/bash
# Show missing plugins after chezmoi apply
# Hash: {{ include "dot_claude/.settings.plugins.json" | sha256sum }}

set -euo pipefail

SCRIPT="$HOME/.claude/scripts/show-missing-plugins.sh"

# Only run if script exists and is executable
if [[ -x "$SCRIPT" ]]; then
    "$SCRIPT"
fi
{{ end -}}
